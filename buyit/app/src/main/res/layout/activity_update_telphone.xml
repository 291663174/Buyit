<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#F0FFF0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp">

    <RelativeLayout
        android:id="@+id/modify_tel_bar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageButton
            android:id="@+id/back_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:background="@mipmap/back"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <TextView
            android:id="@+id/cancel_text"
            android:text="修改手机号"
            android:layout_centerVertical="true"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/back_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />

        <TextView
            android:id="@+id/update_text"
            android:text="保存"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@android:color/white"
        android:layout_width="400dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="50dp"
        android:id="@+id/modify_tel_edit"
        android:layout_below="@+id/modify_tel_bar">

        <TextView
            android:id="@+id/xiugaishouji"
            android:text="手机号:"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            tools:ignore="HardcodedText,SpUsage" />

        <!--去掉输入框的下划线，并添加相应提示语给用户-->
        <EditText
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/xiugaishouji"
            android:id="@+id/edit_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入手机号"
            tools:ignore="Autofill,HardcodedText,TextFields"
            android:layout_toRightOf="@+id/xiugaishouji" />

    </RelativeLayout>
    <TextView
        android:layout_below="@+id/modify_tel_edit"
        android:text="请输入9位或11位手机号！"
        android:textSize="14dp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />

</RelativeLayout>